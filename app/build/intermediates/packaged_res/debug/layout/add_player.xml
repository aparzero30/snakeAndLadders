<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    tools:context=".MainActivity"
    android:id="@+id/add_player">



    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/player_input"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/player_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Enter player name here..."
            />

    </com.google.android.material.textfield.TextInputLayout>

    <FrameLayout
        android:id="@+id/avatar"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@+id/player_input"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="25dp" />

    <ImageView
        android:id="@+id/avatar1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/avatar1"
        android:layout_gravity="center_vertical|start"
        app:layout_constraintStart_toStartOf="@id/avatar"
        app:layout_constraintTop_toTopOf="@id/avatar"
        app:layout_constraintEnd_toEndOf="@id/avatar"
        app:layout_constraintBottom_toBottomOf="@id/avatar"

        />

    <ImageView
        android:id="@+id/avatar2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/avatar2"
        android:layout_gravity="center_vertical|start"
        app:layout_constraintStart_toEndOf="@id/avatar1"
        app:layout_constraintTop_toTopOf="@id/avatar"
        android:layout_marginLeft="40dp"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        />

    <ImageView
        android:id="@+id/avatar3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/avatar3"
        android:layout_gravity="center_vertical|start"
        app:layout_constraintStart_toEndOf="@id/avatar2"
        app:layout_constraintTop_toTopOf="@id/avatar"
        android:layout_marginLeft="40dp"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        />

    <ImageView
        android:id="@+id/avatar4"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/avatar4"
        android:layout_gravity="center_vertical|start"
        app:layout_constraintEnd_toStartOf="@id/avatar1"
        app:layout_constraintTop_toTopOf="@id/avatar"
        android:layout_marginRight="40dp"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        />

    <ImageView
        android:id="@+id/avatar5"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/avatar5"
        android:layout_gravity="center_vertical|start"
        app:layout_constraintEnd_toStartOf="@id/avatar4"
        app:layout_constraintTop_toTopOf="@id/avatar"
        android:layout_marginRight="40dp"
        app:layout_constraintBottom_toBottomOf="@id/avatar"
        />


</androidx.constraintlayout.widget.ConstraintLayout>