<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_container"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="700dp"
    android:layout_height="340dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    tools:context=".leaderboard_fragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/board"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/board_board"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/roll_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/start_color"
        android:textColor="@color/white"
        android:text="ROLL"
        app:layout_constraintStart_toEndOf="@id/board"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="65dp"
        />

    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="@color/player_color"
        app:layout_constraintEnd_toStartOf="@id/frame2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/player1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/leader_wizard"
            android:layout_gravity="center_vertical|start"
            app:layout_constraintStart_toStartOf="@id/frame1"
            app:layout_constraintTop_toTopOf="@id/frame1"
            app:layout_constraintEnd_toEndOf="@id/frame1"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player 1"
            app:layout_constraintStart_toStartOf="@id/frame1"
            app:layout_constraintTop_toBottomOf="@id/player1"
            app:layout_constraintEnd_toEndOf="@id/frame1" />

    <FrameLayout
        android:id="@+id/frame2"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="@color/player_color"
        app:layout_constraintStart_toEndOf="@id/board"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"/>

    <ImageView
        android:id="@+id/player2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/leader_wizard"
        android:layout_gravity="center_vertical|start"
        app:layout_constraintStart_toStartOf="@id/frame2"
        app:layout_constraintTop_toTopOf="@id/frame2"
        app:layout_constraintEnd_toEndOf="@id/frame2"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 2"
        app:layout_constraintStart_toStartOf="@id/frame2"
        app:layout_constraintTop_toBottomOf="@id/player2"
        app:layout_constraintEnd_toEndOf="@id/frame2" />

    <FrameLayout
        android:id="@+id/frame3"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="@color/player_color"
        app:layout_constraintStart_toEndOf="@id/frame2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:id="@+id/player3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/leader_wizard"
        android:layout_gravity="center_vertical|start"
        app:layout_constraintStart_toStartOf="@id/frame3"
        app:layout_constraintTop_toTopOf="@id/frame3"
        app:layout_constraintEnd_toEndOf="@id/frame3"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 3"
        app:layout_constraintStart_toStartOf="@id/frame3"
        app:layout_constraintTop_toBottomOf="@id/player3"
        app:layout_constraintEnd_toEndOf="@id/frame3" />

    <FrameLayout
        android:id="@+id/frame4"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="@color/player_color"
        app:layout_constraintTop_toBottomOf="@id/frame1"
        app:layout_constraintStart_toEndOf="@id/board"
        app:layout_constraintEnd_toStartOf="@id/frame5"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="50dp"/>

    <ImageView
        android:id="@+id/player4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/leader_wizard"
        android:layout_gravity="center_vertical|start"
        app:layout_constraintStart_toStartOf="@id/frame4"
        app:layout_constraintTop_toTopOf="@id/frame4"
        app:layout_constraintEnd_toEndOf="@id/frame4"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 4"
        app:layout_constraintStart_toStartOf="@id/frame4"
        app:layout_constraintTop_toBottomOf="@id/player4"
        app:layout_constraintEnd_toEndOf="@id/frame4" />

    <FrameLayout
        android:id="@+id/frame5"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:background="@color/player_color"
        app:layout_constraintTop_toBottomOf="@id/frame1"
        app:layout_constraintStart_toEndOf="@id/frame4"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        />

    <ImageView
        android:id="@+id/player5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/leader_wizard"
        android:layout_gravity="center_vertical|start"
        app:layout_constraintStart_toStartOf="@id/frame5"
        app:layout_constraintTop_toTopOf="@id/frame5"
        app:layout_constraintEnd_toEndOf="@id/frame5"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player 5"
        app:layout_constraintStart_toStartOf="@id/frame5"
        app:layout_constraintTop_toBottomOf="@id/player5"
        app:layout_constraintEnd_toEndOf="@id/frame5" />

</androidx.constraintlayout.widget.ConstraintLayout>
