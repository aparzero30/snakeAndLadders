<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_color"
    tools:context=".MainActivity"
    android:id="@+id/portal">



    <ImageView
        android:id="@+id/portalImg"
        android:layout_width="450dp"
        android:layout_height="200dp"
        android:background="@color/bg_color"
        app:layout_constraintStart_toStartOf="@+id/portal"
        app:layout_constraintEnd_toEndOf="@+id/portal"
        app:layout_constraintTop_toTopOf="@+id/portal"
        android:layout_marginTop="20dp"
        android:src="@drawable/wormhole"
        tools:ignore="MissingConstraints" />



    <TextView
        android:id="@+id/portaltxt"
        android:layout_width="180dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="Player1's turn"
        app:layout_constraintStart_toStartOf="@+id/portal"
        app:layout_constraintEnd_toEndOf="@+id/portal"
        app:layout_constraintTop_toBottomOf="@+id/portalImg"
        android:textAlignment="center"
        android:width="450dp"
        android:layout_marginTop="10dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>